{
  "scripts": {
    "postinstall": "npm prune",
    "mocha": "mocha --recursive --compilers js:babel-register test",
    "test": "npm run mocha",
    "cover": "babel-node ./node_modules/.bin/isparta cover _mocha -- --recursive --compilers js:babel-register test",
    "eslint": "eslint --debug ./src",
    "lintfix": "eslint --debug src --fix",
    "start": "npm run mocha -- -w",
    "livereload": "livereload",
    "ws": "ws",
    "watch": "watchify test -dvwo web/tests.js",
    "web": "npm i && npm-run-all --parallel livereload ws watch"
  },
  "name": "nodejs",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.2.0",
    "chai": "^3.5.0",
    "eslint": "^3.8.1",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.2",
    "livereload": "^0.6.0",
    "local-web-server": "^1.2.1",
    "mocha": "^3.1.2",
    "npm-run-all": "^3.1.1",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": true,
          "regenerator": true
        }
      ]
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "local-web-server": {
    "directory": "web/",
    "port": 3000,
    "forbid": [
      "*.json",
      "*.ts",
      "*.md",
      "*.yml",
      "*.babel.js",
      ".gitignore"
    ],
    "no-cache": true
  },
  "livereload": {
    "exclusions": [
      "*.git",
      "node_modules/**/*.*",
      ".gitignore",
      "*.json",
      "*.md"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "directories": {
    "test": "test"
  },
  "description": "livereload testing with coverage using mocha, chai, babel-cli, istanbul, eslint, watchify, babelify, livereload and local-web-server on top of node npm",
  "main": "test/main.test.js",
  "keywords": [
    "livereload",
    "test",
    "mocha",
    "chai",
    "babel-cli",
    "istanbul",
    "isprata",
    "eslint",
    "watchify",
    "babelify",
    "livereload",
    "local-web-server"
  ],
  "author": "Maksim Kostromin <daggerok@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daggerok/nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/daggerok/nodejs/issues"
  },
  "homepage": "https://github.com/daggerok/nodejs#readme"
}
