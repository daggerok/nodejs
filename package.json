{
  "name": "nodejs",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "ci": "npm i && npm-run-all once report coffeelint build browser",
    "start": "nodemon -w index.coffee -w lib index.coffee",
    "tdd": "npm run mocha -- -w --watch-extensions coffee",
    "coverage": "npm-run-all cover:*",
    "browser": "npm-run-all dist browserify",
    "build": "npm-run-all dist compile",
    "once": "npm run coffee -- index.coffee",
    "coffeelint": "coffeelint -f coffeelint.json index.coffee lib test",
    "report": "npm-run-all cover:tests cover:report",
    "test": "npm run mocha",
    "postinstall": "npm run mkdist",
    "rmdist": "rimraf -rf dist",
    "mkdist": "mkdir -p dist",
    "dist": "npm-run-all rmdist mkdist",
    "coffee": "coffee",
    "compile": "npm run coffee -- -o dist -c .",
    "browserify": "browserify --extension=.coffee -t coffeeify index.coffee -o dist/bundle.js",
    "watch": "npm-run-all dist watchify",
    "watchify": "watchify --extension=.coffee -t coffeeify index.coffee -dvwo dist/bundle.js",
    "mocha": "mocha --compilers coffee:coffee-script/register",
    "cover:tests": "mocha --recursive --compilers coffee:coffee-script/register --require coffee-coverage/register-istanbul test",
    "cover:report": "istanbul report",
    "cover:open": "node -e \"require('open')('./coverage/lcov-report/index.html')\""
  },
  "keywords": [
    "node",
    "coffee",
    "coffeelint",
    "coffee-script",
    "mocha",
    "chai",
    "istanbul",
    "coffee-coverage",
    "browserify",
    "coffeeify",
    "watchify"
  ],
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "coffee-coverage": "^1.0.1",
    "coffee-script": "^1.10.0",
    "coffeeify": "^2.0.1",
    "coffeelint": "^1.15.0",
    "install": "^0.6.1",
    "istanbul": "^0.4.2",
    "mkdir": "0.0.2",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "npm-run-all": "^1.6.0",
    "open": "0.0.5",
    "rimraf": "^2.5.2",
    "watchify": "^3.7.0"
  },
  "dependencies": {},
  "description": "node.js maps",
  "main": "app.js",
  "author": "Maksim Kostromin <daggerok@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daggerok/nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/daggerok/nodejs/issues"
  },
  "homepage": "https://github.com/daggerok/nodejs#readme"
}
